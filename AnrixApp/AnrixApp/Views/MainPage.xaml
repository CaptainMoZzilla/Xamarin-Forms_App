<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:AnrixApp.ViewModels"
            x:Class="AnrixApp.Views.MainPage">

    <TabbedPage.Children>
        <NavigationPage Title="Groups" Icon="groups_logo.png" BarBackgroundColor="{StaticResource ToolbarColor}">
            <x:Arguments>
                <views:GroupsPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="Students" Icon="students_logo.png" BarBackgroundColor="{StaticResource ToolbarColor}">
            <x:Arguments>
                <views:StudentsPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage Title="In future" Icon="DELETE.png" BarBackgroundColor="{StaticResource ToolbarColor}">
            <x:Arguments>
                <ContentPage>
                    <Label Text ="In development"/>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>    
        
    </TabbedPage.Children>
</TabbedPage>