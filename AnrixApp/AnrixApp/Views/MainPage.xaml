<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:AnrixApp.ViewModels"
            xmlns:views1="clr-namespace:AnrixApp.Views"
            x:Class="AnrixApp.Views.MainPage"
            BackgroundColor="#e8eaf6">

    <TabbedPage.Children>
        <NavigationPage x:Name="Page1" Title="Groups" Icon="groups_logo.png" BarBackgroundColor="{StaticResource ToolbarColor}">
            <x:Arguments>
                <views:GroupsPage />
            </x:Arguments>
        </NavigationPage>

        <NavigationPage x:Name="Page2" Title="Students" Icon="students_logo.png" BarBackgroundColor="{StaticResource ToolbarColor}">
            <x:Arguments>
                <views:StudentsPage/>
            </x:Arguments>
        </NavigationPage>

        <NavigationPage x:Name="Page3" Title="Statistic" Icon="statistics_icon.png" BarBackgroundColor="{StaticResource ToolbarColor}">
            <x:Arguments>
                <views:StatisticPage/>
            </x:Arguments>
        </NavigationPage>

        <NavigationPage x:Name="Page4" Title="Telegram bot" Icon="bot_icon.png" BarBackgroundColor="{StaticResource ToolbarColor}">
            <x:Arguments>
                <views1:BotsPage/>
            </x:Arguments>
        </NavigationPage>
    </TabbedPage.Children>
</TabbedPage>