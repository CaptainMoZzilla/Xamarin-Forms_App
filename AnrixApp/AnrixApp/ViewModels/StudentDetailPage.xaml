<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnrixApp.ViewModels.StudentDetailPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" >
            <Image Source="student_face.png" HorizontalOptions="Center"/>
            <Label Text="{Binding Name, StringFormat='Name: {0:N}'}"/>
            <Label Text="{Binding Surname, StringFormat='Surname: {0:N}'}"/>
            <Label Text="{Binding Patronymic, StringFormat='Patronymic: {0:N}'}"/>
            <Label Text="{Binding NumberOfGroup, StringFormat='Group: {0:N}'}"/>
            <Label Text="{Binding AverageMark, StringFormat='Average mark: {0:N}'}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>