<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnrixApp.ViewModels.StudentDetailPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" >
            <Image Source="big_student_face.png" HorizontalOptions="Center" Margin="5"/>
            <Label Text="{Binding Title}" FontSize="Large" TextColor="Black" HorizontalOptions="Center"/>
            <Label Text="{Binding Patronymic}" FontSize="Large" TextColor="Black" HorizontalOptions="Center"/>

            <Grid HorizontalOptions="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Text="Mark" Grid.Row="0" Grid.Column="0" HorizontalOptions="Center"/>
                <Label Text="{Binding AverageMark}" Grid.Row="0" Grid.Column="1" HorizontalOptions="Center"/>

                <Label Text="Group" Grid.Row="1" Grid.Column="0" HorizontalOptions="Center"/>
                <Label Text="{Binding NumberOfGroup}" Grid.Row="1" Grid.Column="1" HorizontalOptions="Center"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>